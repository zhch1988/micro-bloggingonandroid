<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg"
  >

  <RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="38px"
  android:layout_margin="3px"
  >
  <ImageView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@drawable/icon">
  </ImageView>
  <TextView
  android:id="@+id/showName"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:text="@string/title"
  android:textColor="#343434"
  android:textSize="15px">
  </TextView>
  <ImageButton
  android:id="@+id/writeBtn"
  android:layout_width="45px"
  android:layout_height="wrap_content"
  android:layout_toLeftOf="@+id/refreshBtn"
  android:background="@drawable/ic_menu_home">
  </ImageButton>
  <ImageButton
  android:id="@+id/refreshBtn"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentRight="true"
  android:layout_marginLeft="12px"
  android:background="@drawable/ic_menu_revert">
  </ImageButton>
  </RelativeLayout>
    <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="5px"
  android:background="@drawable/haha">
  </LinearLayout>
  <RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/darkgray">
  <TextView
  android:id="@+id/weibozhum"
    android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@+id/weibozhu"
  android:layout_centerInParent="true"
  android:layout_alignParentRight="true"
  android:textColor="#080808">
  </TextView>
    <ImageView
  android:id="@+id/weibozhu"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginBottom="3px"
  android:layout_alignParentLeft="true">
  </ImageView>
  </RelativeLayout>
    <RelativeLayout
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:background="#ffffff"
 >
<ScrollView
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="#ffffff"
><LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"

>
<TextView
android:id="@+id/user_weibotext"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="15px"
></TextView>
<ImageView
android:id="@+id/user_weibopic"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
></ImageView>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
     android:orientation="vertical"
  android:background="#BEBEBE"
  android:id="@+id/retweet"
  android:visibility="visible"
  android:focusable="false"
 
  >  
  <TextView
  android:id="@+id/retweettext"
  android:focusable="false"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="#424952"
  android:textSize="13px"
    android:textColorLink="#7B68EE"
  
 >
  </TextView>
    <ImageView
  android:id="@+id/retweetimage"
  android:focusable="false"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentLeft="true"
  android:layout_below="@+id/retweettext">
  </ImageView></LinearLayout>
</LinearLayout>
</ScrollView>
 <LinearLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
     android:layout_alignParentBottom="true">
        
		<ImageButton
			android:id="@+id/detail_refresh"
			android:layout_width="68dip"
			android:layout_height="44dip"
			android:layout_margin="0.0dip"
			android:src="@drawable/detail_refresh_normal"
			android:background="@drawable/darkgray"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/detail_comment"
			android:layout_width="68dip"
			android:layout_height="44dip"
			android:layout_margin="0.0dip"
			android:src="@drawable/detail_comment_normal"
			android:layout_toRightOf="@+id/detail_refresh_normal"
			android:background="@drawable/darkgray"
			>
		</ImageButton>
	
		<ImageButton
			android:id="@+id/detail_forward"
			android:layout_width="68dip"
			android:layout_height="44dip"
			android:layout_margin="0.0dip"
			android:src="@drawable/detail_forward_normal"
			android:layout_toRightOf="@+id/detail_comments"
			android:background="@drawable/darkgray"
			>
		</ImageButton>
			<ImageButton
			android:id="@+id/detail_fav"
			android:layout_width="68dip"
			android:layout_height="44dip"
			android:layout_margin="0.0dip"
			android:src="@drawable/detail_fav_highlight_normal"
			android:layout_toRightOf="@+id/detail_forward"
			android:background="@drawable/darkgray"
			>
		</ImageButton>
			<ImageButton
			android:id="@+id/detail_more"
			android:layout_width="68dip"
			android:layout_height="44dip"
			android:layout_margin="0.0dip"
			android:src="@drawable/detail_more_normal"
			android:layout_toRightOf="@+id/detail_fav"
			android:background="@drawable/darkgray"
			>
		</ImageButton>
        
        </LinearLayout>
        </RelativeLayout>
</LinearLayout>
